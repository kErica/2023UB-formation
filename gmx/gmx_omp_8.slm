#!/bin/bash

#SBATCH -J gmx_omp_8
#SBATCH -e gmx_omp_8.%j.err
#SBATCH -o gmx_omp_8.%j.log
#SBATCH -N 1
#SBATCH -n 1
#SBATCH -c 8
#SBATCH -t 30
#SBATCH --reservation=curs

module load gromacs/2018.3

OMP_NUM_THREADS=${SLURM_CPUS_PER_TASK:-1}

cp ${HOME}/gmx/ion_channel.tpr ${SCRATCH}
cd ${SCRATCH}

srun gmx_mpi mdrun -ntomp $OMP_NUM_THREADS -ntomp_pme 0 -s ion_channel.tpr

cp md.log ${SLURM_SUBMIT_DIR}/md.${SLURM_JOB_ID}.log

